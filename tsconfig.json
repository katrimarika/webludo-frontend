{
  "compilerOptions": {
    "target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Preact config */
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true
  },
  "include": ["src"]
}
